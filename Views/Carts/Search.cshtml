@model IEnumerable<CartItem>

<div class="container">
    <h2>Kết quả tìm kiếm</h2>
    @if (!Model.Any())
    {
        <p>Không có sản phẩm nào như vậy trong giỏ hàng của bạn.</p>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="card mb-3">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@item.Watch.ImagePath" class="card-img" alt="Hình ảnh sản phẩm">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Watch.Name</h5>
                            <p class="card-text"><strong>Mô tả:</strong> @item.Watch.Description</p>
                            <p class="card-text"><strong>Hãng:</strong> @item.Watch.Brand</p>
                            <p class="card-text"><strong>Giá tiền:</strong> $@item.Watch.Price</p>
                            <p class="card-text"><strong>Số lượng tồn kho:</strong> @item.Watch.StockQuantity</p>
                            <p class="card-text"><strong>Số lượng muốn mua: </strong></p>
                            <input type="number" id="quantity@item.CartItemID" min="1" max="@item.Watch.StockQuantity" value="@item.Quantity">
                            <div class="mt-3">
                                <button class="btn btn-primary" onclick="confirmBuy(@item.CartItemID, document.getElementById('quantity@item.CartItemID')?.value)">Mua</button>
                                <button class="btn btn-danger" onclick="confirmRemoveFromCart(@item.CartItemID)">Xóa khỏi giỏ hàng</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
